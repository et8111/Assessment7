@model QLHOLIDAYPARTY.Models.Dish
@{
    ViewBag.Title = "dishEditor";
}

<h2>dishEditor</h2>

<form action="dishSaver" method="post">
    <div class="form-group">
        <label class="control-label col-sm-2">First Name:</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(a => a.PersonalName, new {@class="form-control", type="text", value=Model.PersonalName })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2">Phone#:</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(a => a.PhoneNumber, new { @class = "form-control", type = "text", value = Model.PhoneNumber })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2">Dish Name:</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(a => a.DishName, new { @class = "form-control", type = "text", value = Model.DishName })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2">Dish Description:</label>
        <div class="col-sm-10">
            @Html.TextAreaFor(a => a.DishDescription, new { @class = "form-control", type = "text", value = Model.DishDescription })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2">Options:</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(a => a.Options, new { @class = "form-control", type = "text", value = Model.Options })
        </div>
    </div>
    @Html.TextBoxFor(a => a.DishID,null, new {type="hidden" })
    <input type="submit" class="btn-danger" />
</form>

<input type="hidden"/>

