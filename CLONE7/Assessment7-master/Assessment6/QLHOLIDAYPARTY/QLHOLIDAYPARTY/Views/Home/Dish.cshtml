@model QLHOLIDAYPARTY.Models.Dish
    @{
        ViewBag.Title = "Dish";
    }

    <h2>Dish</h2>

    <div style="margin-top: 50px">
        <h1>Register</h1>
        <form class="form-horizontal" action="/Home/Done1" method="post" name="theForm" onsubmit="return(validate1());">
            <div class="form-group">
                <label class="control-label col-sm-2">First Name:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(v => v.PersonalName, new { @class = "form-control", placeholder = "Enter  Name", name = "Name" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Phone#:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(v => v.PhoneNumber, new { @class = "form-control", placeholder = "Phone", name = "phone", maxlength = "10", minlength="10", type="number"})
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Dish:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(v => v.DishName, new { @class = "form-control", placeholder = "Enter Dish", name = "dish" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Description:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(v => v.DishDescription, new { @class = "form-control", placeholder = "Breif Description", name = "desc" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Specials:</label>
                <div class="col-sm-10">
                    @Html.TextAreaFor(v => v.Options, new { @class = "form-control", placeholder = "Gluten, vegen, etc.", name = "options" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button id="subButton" type="submit" class="btn btn-success">Submit</button>
                </div>
            </div>
        </form>
    </div>