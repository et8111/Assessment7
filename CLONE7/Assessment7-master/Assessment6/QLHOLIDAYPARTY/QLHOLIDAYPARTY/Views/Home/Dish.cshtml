@model QLHOLIDAYPARTY.Models.RegisterModel
    @{
        ViewBag.Title = "Dish";
        var temp = Model.g.FirstName + " " + Model.g.LastName;
        string tempphone = "9999999999";
        if (!string.IsNullOrEmpty(Model.d.PhoneNumber))
        {
            tempphone = Model.d.PhoneNumber;
        }
    }

    <h2>Dish</h2>
    <div style="margin-top: 50px">
        <h1>Register</h1>
        <form class="form-horizontal" action="/Home/dishSaver" method="post" name="theForm" onsubmit="return(validate1());">
            <div class="form-group">
                <label class="control-label col-sm-2">First Name:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(v => v.d.PersonName , new {  @Value = temp, @class = "form-control", name = "Name" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Phone#:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(v =>v.d.PhoneNumber, new { @Value=tempphone,  @class = "form-control", name = "phone", maxlength = "10", minlength="10", type="number"})
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Dish:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(v => v.d.DishName, new { @class = "form-control", placeholder = "Enter Dish", name = "dish" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Description:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(v => v.d.DishDescription, new { @class = "form-control", placeholder = "Breif Description", name = "desc" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Specials:</label>
                <div class="col-sm-10">
                    @Html.TextAreaFor(v => v.d.Options, new { @class = "form-control", placeholder = "Gluten, vegen, etc.", name = "options" })
                </div>
            </div>
            @Html.HiddenFor(a => a.d.DishID)
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button id="subButton" type="submit" class="btn btn-success">Submit</button>
                </div>
            </div>
        </form>
    </div>